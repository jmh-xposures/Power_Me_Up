<% content_for(:name) do %>
  Superpower - <%= @power.name %>
<% end %>

<div>
  <h1>
    <%= @power.name %>
  </h1>
</div>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Submit to hero</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm to hero</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      	<%= simple_form_for [ @power, @rental ] do |f| %>
      	 <%= f.input :comment %>
      	 <%= f.submit "Submit to Hero", class: "btn btn-primary" %>
 		<% end %>


      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>