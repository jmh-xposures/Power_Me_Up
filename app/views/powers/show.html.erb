<% content_for(:name) do %>
  Superpower - <%= @power.name %>
<% end %>


<% if @power.photo.attached? %>
	<%= cl_image_tag @power.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<div>
  <h1>
    <%= @power.name %>
  </h1>

<div class="d-flex">
  <div class="card">
    <div class="row">
      <div class="card-body">
        <h1>
          <%= @power.name %>
        </h1>
        <p style="text-align: left;">Power owned by Hero</p>
        <hr class="my-3">
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Impedit omnis ipsa porro amet <br>
          sequi quis error voluptates molestias ad itaque expedita, veniam at.<br>
          Suscipit atque dolorum quis reiciendis, quam molestias.</p>
        <div style="text-align: right;">$20.000</div>
      </div>
    </div>
  </div>

  <div class="card d-flex">
    <div>
      <button type="button" class="btn btn-secondary">Rent Power</button>
    </div>
    <p>Reviews</p>
    <div class="row">
      <div class="card" style="width: 400px;">
        <h3>Power 1</h3>
        <p>Some text</p>
      </div>
    </div>
    <div class="row">
      <div class="card" style="width: 400px;">
        <h3>Power 2</h3>
        <p>Some text</p>
      </div>
    </div>
    <div class="row">
      <div class="card" style="width: 400px;">
        <h3>Power 3</h3>
        <p>Some text</p>
      </div>
    </div>
    <div class="row">
      <div class="card" style="width: 400px;">
        <h3>Power 4</h3>
        <p>Some text</p>
      </div>
    </div>
  </div>

</div>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Submit to hero</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm to hero</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<h3><%= @power.name %></h3>
		<% if @power.photo.attached? %>
		 <%= cl_image_tag @power.photo.key, height: 300, width: 400, crop: :fill %>
		<% end %>
      	<%= simple_form_for [ @power, @rental ] do |f| %>
      	 <%= f.input :comment %>
      	 <%= f.submit "Submit to Hero", class: "btn btn-primary" %>
 		<% end %>


      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      
      </div>
    </div>
  </div>
</div>


